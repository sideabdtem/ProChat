rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Experts can be read by anyone, but only updated by the expert themselves
    match /experts/{expertId} {
      allow read: if true; // Anyone can read expert profiles
      allow write: if request.auth != null && request.auth.uid == expertId;
    }
    
    // Businesses can be read by anyone, but only updated by the business owner
    match /businesses/{businessId} {
      allow read: if true; // Anyone can read business profiles
      allow write: if request.auth != null && request.auth.uid == businessId;
    }
    
    // Sessions - users can only access their own sessions
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.expertId == request.auth.uid ||
         resource.data.businessId == request.auth.uid);
    }
    
    // Active sessions - users can only access their own sessions
    match /active_sessions/{sessionId} {
      allow read, write: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.expertId == request.auth.uid ||
         resource.data.businessId == request.auth.uid);
    }
    
    // Appointments - users can only access their own appointments
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.expertId == request.auth.uid);
    }
    
    // Chat messages - users can only access messages from their sessions
    match /chat_messages/{messageId} {
      allow read, write: if request.auth != null && 
        (resource.data.clientId == request.auth.uid || 
         resource.data.expertId == request.auth.uid);
    }
    
    // Notifications - users can only access their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        (resource.data.toClientId == request.auth.uid || 
         resource.data.fromExpertId == request.auth.uid);
    }
    
    // Reviews - anyone can read, but only the reviewer can write
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null && 
        resource.data.clientId == request.auth.uid;
    }
    
    // Settings - users can only access their own settings
    match /settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Availability - experts can only update their own availability
    match /availability/{expertId} {
      allow read: if true; // Anyone can read availability
      allow write: if request.auth != null && request.auth.uid == expertId;
    }
    
    // Wallets - business owners can only access their own wallet
    match /wallets/{businessId} {
      allow read, write: if request.auth != null && request.auth.uid == businessId;
    }
    
    // Transactions - business owners can only access their own transactions
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null && 
        resource.data.businessId == request.auth.uid;
    }
    
    // Team usage - business owners can only access their own team usage
    match /team_usage/{usageId} {
      allow read, write: if request.auth != null && 
        resource.data.businessId == request.auth.uid;
    }
  }
} 